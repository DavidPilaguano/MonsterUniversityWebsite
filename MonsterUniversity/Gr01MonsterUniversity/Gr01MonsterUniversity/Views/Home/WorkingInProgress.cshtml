@{
    ViewBag.Title = "En Construcción";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wip-wrapper">
    <div class="wip-content">
        <div class="icon-box">
            <i class="fas fa-tools shadow-icon"></i>
            <div class="dots-animation">
                <span></span><span></span><span></span>
            </div>
        </div>

        <h1 class="wip-title">Estamos Trabajando</h1>
        <p class="wip-subtitle">Esta funcionalidad estará disponible muy pronto para la comunidad de <strong>Monster University</strong>.</p>

        <div class="progress-container">
            <div class="progress-bar-custom"></div>
        </div>

        <a href="@Url.Action("Index", "Home")" class="btn-back">
            <i class="fas fa-arrow-left"></i> Volver al Dashboard
        </a>
    </div>
</div>

<style>
    /* Contenedor centrado */
    .wip-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        text-align: center;
    }

    .wip-content {
        max-width: 500px;
    }

    /* Icono con sombra y animación */
    .icon-box {
        position: relative;
        font-size: 80px;
        color: #3b82f6;
        margin-bottom: 30px;
    }

    .shadow-icon {
        filter: drop-shadow(0 10px 15px rgba(59, 130, 246, 0.3));
        animation: float 3s ease-in-out infinite;
    }

    /* Títulos */
    .wip-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #0f172a;
        margin-bottom: 15px;
        letter-spacing: -1px;
    }

    .wip-subtitle {
        font-size: 1.1rem;
        color: #64748b;
        line-height: 1.6;
        margin-bottom: 40px;
    }

    /* Barra de progreso decorativa */
    .progress-container {
        width: 100%;
        height: 8px;
        background: #f1f5f9;
        border-radius: 10px;
        margin-bottom: 40px;
        overflow: hidden;
    }

    .progress-bar-custom {
        width: 65%;
        height: 100%;
        background: linear-gradient(90deg, #3b82f6, #60a5fa);
        border-radius: 10px;
        position: relative;
        animation: progress-pulse 2s infinite;
    }

    /* Botón moderno */
    .btn-back {
        display: inline-flex;
        align-items: center;
        background: #0f172a;
        color: white;
        padding: 12px 25px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none !important;
        transition: all 0.3s;
        box-shadow: 0 10px 15px -3px rgba(15, 23, 42, 0.2);
    }

        .btn-back i {
            margin-right: 10px;
        }

        .btn-back:hover {
            background: #3b82f6;
            transform: translateY(-2px);
            color: white;
        }

    /* Animaciones */
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }
    }

    @@keyframes progress-pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.6;
        }

        100% {
            opacity: 1;
        }
    }

    .dots-animation span {
        display: inline-block;
        width: 8px;
        height: 8px;
        margin: 0 3px;
        background: #3b82f6;
        border-radius: 50%;
        animation: dots 1.4s infinite;
    }

        .dots-animation span:nth-child(2) {
            animation-delay: 0.2s;
        }

        .dots-animation span:nth-child(3) {
            animation-delay: 0.4s;
        }

    @@keyframes dots {
        0%, 80%, 100% {
            transform: scale(0);
        }

        40% {
            transform: scale(1);
        }
    }
</style>