@using Gr01MonsterUniversity.Models
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MU-SYS Enterprise</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        :root {
            --mu-primary: #1e3c72;
            --mu-accent: #2a5298;
            --mu-wip: #f39c12;
            --mu-bg: #f8fafc;
            --nav-height: 60px;
        }

        body {
            padding-top: calc(var(--nav-height) + 20px);
            background-color: var(--mu-bg);
            font-family: 'Inter', 'Segoe UI', sans-serif;
            color: #1e293b;
        }

        /* NAVBAR ULTRA-COMPACTA */
        .navbar-mu {
            background: #ffffff;
            border: none;
            box-shadow: 0 1px 15px rgba(0,0,0,0.05);
            height: var(--nav-height);
            display: flex;
            align-items: center;
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 0 25px;
        }

        .brand-box {
            font-weight: 800;
            font-size: 1.2rem;
            color: var(--mu-primary) !important;
            text-decoration: none;
            margin-right: 20px;
        }

        /* NAVEGACIÓN PRINCIPAL */
        .nav-main {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            align-items: center;
        }

        .nav-item-link {
            color: #475569 !important;
            font-weight: 600;
            font-size: 11.5px;
            padding: 0 10px;
            text-transform: uppercase;
            text-decoration: none !important;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            height: var(--nav-height);
        }

            .nav-item-link:hover, .nav-item-link.active {
                color: var(--mu-primary) !important;
                background: rgba(30, 60, 114, 0.05);
                border-bottom: 3px solid var(--mu-primary);
            }

            .nav-item-link i {
                margin-right: 5px;
                font-size: 14px;
            }

        /* DROPDOWNS SUBSISTEMAS */
        .dropdown-mu {
            position: relative;
        }

            .dropdown-mu:hover .dropdown-content {
                display: block;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background: white;
            min-width: 200px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            border-radius: 8px;
            padding: 10px 0;
            z-index: 1000;
            top: 100%;
        }

            .dropdown-content a {
                padding: 8px 20px;
                display: block;
                color: #334155;
                text-decoration: none;
                font-size: 13px;
            }

                .dropdown-content a:hover {
                    background: #f1f5f9;
                    color: var(--mu-primary);
                }

        .sub-header {
            font-size: 10px;
            font-weight: 800;
            color: #94a3b8;
            padding: 5px 20px;
            text-transform: uppercase;
        }

        /* BADGES */
        .wip-tag {
            background: var(--mu-wip);
            color: white;
            font-size: 8px;
            padding: 1px 4px;
            border-radius: 4px;
            margin-left: 5px;
        }

        .body-content {
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.02);
            min-height: 75vh;
        }

        .user-pill {
            background: #f1f5f9;
            padding: 6px 15px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 700;
            color: var(--mu-primary);
            border: 1px solid #e2e8f0;
        }
    </style>
</head>
<body>
    <nav class="navbar-mu navbar-fixed-top">
        <div class="navbar-container">
            <a href="@Url.Action("Index", "Home")" class="brand-box">
                <i class="fas fa-university"></i> MU<span style="font-weight:300">SYS</span>
            </a>

            <ul class="nav-main">
                <li><a href="@Url.Action("Index", "Home")" class="nav-item-link"><i class="fas fa-home"></i> Inicio</a></li>

                @* ACCESOS DIRECTOS DINÁMICOS DEL ADMINISTRADOR (EST, OPC01-05) *@
                @if (Session["MenuDinamico"] != null)
                {
                    var menu = (List<XEOPC_OPCIO>)Session["MenuDinamico"];
                    foreach (var item in menu)
                    {
                        <li>
                            <a href="@item.XEOPC_URL" class="nav-item-link">
                                <i class="fas fa-bolt"></i> @item.XEOPC_DESCRI
                            </a>
                        </li>
                    }
                }

                @* --- SUBSISTEMA: FINANZAS (WIP) --- *@
                <li class="dropdown-mu">
                    <a href="#" class="nav-item-link"><i class="fas fa-hand-holding-usd"></i> Finanzas <i class="fas fa-chevron-down" style="font-size:8px"></i></a>
                    <div class="dropdown-content">
                        <div class="sub-header">Módulo Contable</div>
                        <a href="@Url.Action("WorkingInProgress", "Home")">Cuentas por Cobrar <span class="wip-tag">WIP</span></a>
                        <a href="@Url.Action("WorkingInProgress", "Home")">Tesorería <span class="wip-tag">WIP</span></a>
                    </div>
                </li>

                @* --- SUBSISTEMA: GESTIÓN ACADÉMICA (WIP) --- *@
                <li class="dropdown-mu">
                    <a href="#" class="nav-item-link"><i class="fas fa-user-graduate"></i> Académico <i class="fas fa-chevron-down" style="font-size:8px"></i></a>
                    <div class="dropdown-content">
                        <div class="sub-header">Módulo Escolar</div>
                        <a href="@Url.Action("WorkingInProgress", "Home")">Malla Curricular <span class="wip-tag">WIP</span></a>
                        <a href="@Url.Action("WorkingInProgress", "Home")">Horarios Globales <span class="wip-tag">WIP</span></a>
                    </div>
                </li>

                @* --- SUBSISTEMA: SEGURIDAD --- *@
                <li class="dropdown-mu">
                    <a href="#" class="nav-item-link"><i class="fas fa-user-shield"></i> Seguridad <i class="fas fa-chevron-down" style="font-size:8px"></i></a>
                    <div class="dropdown-content">
                        <div class="sub-header">Accesos</div>
                        <a href="@Url.Action("GestionarPermisos", "Admin")">Matriz de Privilegios</a>
                        <a href="@Url.Action("AsignarPerfiles", "Admin")">Roles de Usuario</a>
                    </div>
                </li>

                @* --- SUBSISTEMA: ADMINISTRACIÓN TABLAS BÁSICAS --- *@
                <li class="dropdown-mu">
                    <a href="#" class="nav-item-link"><i class="fas fa-database"></i> Config <i class="fas fa-chevron-down" style="font-size:8px"></i></a>
                    <div class="dropdown-content">
                        <div class="sub-header">Configuración Base</div>
                        <a href="@Url.Action("Usuarios", "Admin")">Maestro de Usuarios</a>
                        <a href="@Url.Action("WorkingInProgress", "Home")">Sedes Universitarias <span class="wip-tag">WIP</span></a>
                        <a href="@Url.Action("WorkingInProgress", "Home")">Catálogos Generales <span class="wip-tag">WIP</span></a>
                    </div>
                </li>
            </ul>

            <div style="display:flex; align-items:center;">
                @if (Session["UserName"] != null)
                {
                    <span class="user-pill"><i class="fas fa-circle text-success" style="font-size:8px"></i> @Session["UserName"]</span>
                    <a href="@Url.Action("Logout", "Accounts")" style="margin-left:15px; color:#ef4444; font-weight:700; font-size:12px; text-decoration:none;">
                        <i class="fas fa-power-off"></i> SALIR
                    </a>
                }
            </div>
        </div>
    </nav>



    <div class="container-fluid" style="padding: 0 40px;">
        <div class="body-content">
            @RenderBody()
        </div>

        <footer style="margin-top:40px; padding-bottom:30px; border-top:1px solid #e2e8f0; padding-top:20px;">
            <div class="row">
                <div class="col-md-6 text-muted" style="font-size:12px">
                    <strong>Monster University Management System (MU-SYS)</strong> &copy; @DateTime.Now.Year
                </div>
                <div class="col-md-6 text-right">
                    <span class="label label-default">ADMINISTRADOR</span>
                    <span class="label label-primary">V 2.5.0</span>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>