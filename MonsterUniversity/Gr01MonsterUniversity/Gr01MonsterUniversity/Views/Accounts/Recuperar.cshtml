@{ Layout = null; }
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Recuperar - Monster University</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', sans-serif;
            margin: 0;
        }

        .recovery-card {
            background: white;
            padding: 40px;
            border-radius: 20px;
            width: 100%;
            max-width: 400px;
            text-align: center;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        .btn-send {
            background: #1e3c72;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            width: 100%;
            transition: background 0.3s;
        }

            .btn-send:hover {
                background: #2a5298;
                color: white;
            }

        .form-control {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="recovery-card">
        <h3 style="color: #1e3c72; font-weight: 700;">RECUPERAR CLAVE</h3>
        <p class="text-muted small">Ingresa tu correo institucional registrado.</p>

        @using (Html.BeginForm("RecuperarPassword", "Accounts", FormMethod.Post))
        {
            <div class="form-group text-left">
                <label style="font-size: 12px; font-weight: 600;">CORREO ELECTRÓNICO</label>
                <input type="email" name="emailDestino" class="form-control" placeholder="usuario@monster.edu" required />
            </div>

            if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success small">@TempData["Mensaje"]</div>
            }
            if (TempData["Error"] != null)
            {
                <div class="alert alert-danger small">@TempData["Error"]</div>
            }

            <button type="submit" class="btn btn-send">ENVIAR CORREO</button>
            <div class="mt-3">
                @* Se cambió "Account" por "Accounts" para que coincida con tu controlador *@
                <a href="@Url.Action("Login", "Accounts")" class="text-muted small">Volver al Inicio de Sesión</a>
            </div>
        }
    </div>
</body>
</html>