@model Gr01MonsterUniversity.Models.LoginViewModel
@{ Layout = null; }

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Monster University</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        /* Fondo con el gradiente institucional */
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            height: 100vh;
            margin: 0;
            font-family: 'Poppins', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Tarjeta de Login Grande y Moderna */
        .login-card {
            background: rgba(255, 255, 255, 0.98);
            padding: 50px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 450px;
            transition: transform 0.3s ease;
        }

            .login-card:hover {
                transform: translateY(-5px);
            }

        /* Encabezado */
        .brand-logo {
            color: #1e3c72;
            font-weight: 700;
            font-size: 28px;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .brand-subtitle {
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
        }

        /* Estilo de Inputs */
        .form-control {
            border-radius: 10px;
            padding: 12px 15px;
            height: auto;
            border: 1px solid #ddd;
            background-color: #f8f9fa;
        }

            .form-control:focus {
                border-color: #1e3c72;
                box-shadow: 0 0 0 0.2rem rgba(30, 60, 114, 0.15);
                background-color: #fff;
            }

        label {
            font-weight: 600;
            color: #444;
            font-size: 13px;
            margin-bottom: 8px;
        }

        /* Botón de Entrada */
        .btn-enter {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            font-size: 16px;
            letter-spacing: 1px;
            margin-top: 20px;
            transition: all 0.3s;
            color: white;
        }

            .btn-enter:hover {
                box-shadow: 0 5px 15px rgba(30, 60, 114, 0.4);
                filter: brightness(1.1);
                color: white;
            }

        /* Alert de Error */
        .alert-danger {
            border-radius: 10px;
            font-size: 14px;
            margin-top: 20px;
            border: none;
            background-color: #fceaea;
            color: #c0392b;
        }

        .footer-text {
            margin-top: 30px;
            font-size: 12px;
            color: #999;
        }
    </style>
</head>
<body>

    <div class="login-card text-center">
        <div style="margin-bottom: 15px;">
            <img src="https://cdn-icons-png.flaticon.com/512/3074/3074058.png" width="80" alt="MU Logo">
        </div>

        <h3 class="brand-logo">Monster University</h3>
        <p class="brand-subtitle">Gestión Administrativa Académica</p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group text-left">
                <label><i class="glyphicon glyphicon-user"></i> CÓDIGO DE USUARIO</label>
                @Html.TextBoxFor(m => m.Usuario, new
                {
                    @class = "form-control",
                    @placeholder = "Ej: EMP-001",
                    @autocomplete = "off"
                })
            </div>

            <div class="form-group text-left">
                <label><i class="glyphicon glyphicon-lock"></i> CONTRASEÑA</label>
                @Html.PasswordFor(m => m.Password, new
                {
                    @class = "form-control",
                    @placeholder = "••••••••"
                })
            </div>

            if (ViewBag.Error != null)
            {
                <div class="alert alert-danger animated shake">
                    <strong>Error:</strong> @ViewBag.Error
                </div>
            }

            <button type="submit" class="btn btn-enter btn-block">
                INICIAR SESIÓN
            </button>

            <div class="mt-3">
                <a href="@Url.Action("Recuperar", "Accounts")" style="color: #1e3c72; font-size: 13px; font-weight: 600;">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>
        }

        <div class="footer-text">
            &copy; @DateTime.Now.Year - Grupo 01 Monster University<br>
            Todos los derechos reservados.
        </div>
    </div>

</body>
</html>