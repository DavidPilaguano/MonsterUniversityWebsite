@model Gr01MonsterUniversity.Models.UsuarioCompletoViewModel

@{
    ViewBag.Title = "Editar Perfil | Monster University";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;800&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #f0f2f5;
        font-family: 'Poppins', sans-serif;
    }

    .monster-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        border: none;
        padding: 30px;
        margin-top: 20px;
    }

    .header-section {
        border-bottom: 2px solid #f1f4f8;
        margin-bottom: 25px;
        padding-bottom: 15px;
    }

    .nav-tabs-custom {
        border: none;
        background: #f8f9fa;
        border-radius: 12px;
        padding: 5px;
    }

        .nav-tabs-custom .nav-link {
            border: none;
            color: #555;
            font-weight: 600;
            border-radius: 10px;
            transition: 0.3s;
            padding: 12px;
        }

            .nav-tabs-custom .nav-link.active {
                background: #1e3c72 !important;
                color: white !important;
                box-shadow: 0 4px 12px rgba(30,60,114,0.3);
            }

    .form-group label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #dce1e7;
        padding: 10px 15px;
        transition: 0.3s;
    }

        .form-control:focus {
            border-color: #1e3c72;
            box-shadow: 0 0 0 0.2rem rgba(30,60,114,0.1);
        }

    .img-container {
        position: relative;
        display: inline-block;
    }

    .img-preview {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #fff;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .btn-save {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        border: none;
        padding: 12px 40px;
        border-radius: 10px;
        font-weight: 600;
        transition: 0.3s;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(30,60,114,0.4);
            color: white;
        }

    .badge-role {
        background: #f39c12;
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
    }
</style>

<div class="container">
    <div class="monster-card">
        @using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "editForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.PEEEMP_CODIGO)

            <div class="header-section d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="m-0" style="color: #1e3c72; font-weight: 800;">Configuración de Perfil</h2>
                    <p class="text-muted m-0">ID de Empleado: <strong>@Model.PEEEMP_CODIGO</strong></p>
                </div>
                <div class="text-right">
                    <span class="badge-role">@ViewBag.NombreRol</span>
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

            <ul class="nav nav-pills nav-justified nav-tabs-custom mb-4" role="tablist">
                <li class="nav-item"><a class="nav-link active" data-toggle="pill" href="#tab1"><i class="glyphicon glyphicon-user"></i> Datos Personales</a></li>
                <li class="nav-item"><a class="nav-link" data-toggle="pill" href="#tab2"><i class="glyphicon glyphicon-lock"></i> Seguridad</a></li>
                <li class="nav-item"><a class="nav-link" data-toggle="pill" href="#tab3"><i class="glyphicon glyphicon-picture"></i> Foto y Firma</a></li>
            </ul>

            <div class="tab-content">
                <div id="tab1" class="tab-pane fade show active px-3">
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <label>Cédula de Identidad</label>
                            @Html.EditorFor(m => m.PEEEMP_CEDULA, new { htmlAttributes = new { @class = "form-control", placeholder = "Ej: 1722..." } })
                            @Html.ValidationMessageFor(m => m.PEEEMP_CEDULA, "", new { @class = "text-danger small" })
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Nombres</label>
                            @Html.EditorFor(m => m.PEEEMP_NOMBRES, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-4 form-group">
                            <label>Apellidos</label>
                            @Html.EditorFor(m => m.PEEEMP_APELLIDOS, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-8 form-group">
                            <label>Correo Institucional</label>
                            @Html.EditorFor(m => m.PEEEMP_EMAIL, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                        </div>
                    </div>
                </div>

                <div id="tab2" class="tab-pane fade px-3">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Contraseña de Acceso</label>
                            @Html.PasswordFor(m => m.XEUSU_PASWD, new { @class = "form-control", @value = Model.XEUSU_PASWD })
                            <small class="text-muted">Deje el valor actual para no cambiar la clave.</small>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Rol Asignado</label>
                            @Html.DropDownList("XEPER_CODIGO", null, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div id="tab3" class="tab-pane fade px-3 text-center">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="img-container mb-3">
                                @{ var ruta = !string.IsNullOrEmpty(ViewBag.RutaFotoOriginal as string) ? ViewBag.RutaFotoOriginal as string : "/Uploads/Fotos/default.png"; }
                                <img src="@Url.Content("~" + ruta)" id="imgPrev" class="img-preview" />
                            </div>
                            <div class="custom-file mt-2">
                                <input type="file" name="fotoFile" class="form-control" onchange="previewImage(this)" accept="image/*" />
                            </div>
                        </div>
                        <div class="col-md-6 form-group text-left">
                            <label>Pie de Firma (Cargo/Departamento)</label>
                            @Html.TextAreaFor(m => m.XEUSU_PIEFIR, new { @class = "form-control", rows = "4", placeholder = "Ej: Decano de Facultad..." })
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-right mt-5 pt-3 border-top">
                <a href="@Url.Action("Index")" class="btn btn-light mr-2" style="border-radius:10px;">Cancelar</a>
                <button type="submit" class="btn btn-save">ACTUALIZAR PERFIL</button>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) { $('#imgPrev').attr('src', e.target.result); }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}