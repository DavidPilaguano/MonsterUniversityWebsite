@model Gr01MonsterUniversity.Models.UsuarioCompletoViewModel
@{
    Layout = null;
    string fotoRuta = ViewBag.RutaFotoOriginal;
}

<!DOCTYPE html>
<html>
<head>
    <title>Previsualización de Reporte</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            padding: 40px;
            color: #333;
        }

        .header {
            text-align: center;
            border-bottom: 4px solid #1e3c72;
            margin-bottom: 30px;
            padding-bottom: 10px;
        }

        .logo-title {
            color: #1e3c72;
            font-size: 32px;
            font-weight: bold;
            margin: 0;
        }

        .sub-title {
            color: #666;
            font-size: 18px;
            margin: 5px 0;
        }

        .foto {
            width: 140px;
            height: 140px;
            border: 3px solid #1e3c72;
            border-radius: 8px;
            object-fit: cover;
        }

        .info-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

            .info-table td {
                padding: 12px;
                border: 1px solid #ddd;
                font-size: 14px;
            }

        .label {
            font-weight: bold;
            color: #1e3c72;
            width: 35%;
            background-color: #f5f5f5;
        }

        .footer {
            position: fixed;
            bottom: 20px;
            width: 100%;
            text-align: center;
            font-size: 12px;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1 class="logo-title">MONSTER UNIVERSITY</h1>
        <h3 class="sub-title">FICHA TÉCNICA DE USUARIO MAESTRO</h3>
    </div>

    <table style="width: 100%;">
        <tr>
            <td style="width: 30%; text-align: center; vertical-align: top;">
                @* Usamos Server.MapPath para que el motor de PDF encuentre el archivo físico *@
                <img src="@Server.MapPath("~" + fotoRuta)" class="foto" />
            </td>
            <td style="width: 70%; vertical-align: top; padding-left: 20px;">
                <table class="info-table">
                    <tr><td class="label">ID de Sistema:</td><td>@Model.PEEEMP_CODIGO</td></tr>
                    <tr><td class="label">Cédula Identidad:</td><td>@Model.PEEEMP_CEDULA</td></tr>
                    <tr><td class="label">Nombre Completo:</td><td>@Model.PEEEMP_NOMBRES @Model.PEEEMP_APELLIDOS</td></tr>
                    <tr><td class="label">Correo Electrónico:</td><td>@Model.PEEEMP_EMAIL</td></tr>
                    <tr><td class="label">Rol / Perfil:</td><td>@Model.XEPER_CODIGO</td></tr>
                </table>
            </td>
        </tr>
    </table>

    <div style="margin-top: 80px; text-align: center;">
        <div style="width: 300px; margin: 0 auto; border-top: 2px solid #1e3c72; padding-top: 10px;">
            <p style="margin: 0; font-weight: bold;">@Model.XEUSU_PIEFIR</p>
            <p style="margin: 0; font-size: 12px; color: #777;">Firma Autorizada</p>
        </div>
    </div>

    <div class="footer">
        Este documento es una previsualización oficial generada el @DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")
    </div>
</body>
</html>